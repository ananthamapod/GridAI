doctype html
html
  head
    meta(charset='utf-8')
    title GridAI
    link(rel='stylesheet', href='/static/css/bootstrap.min.css', media='screen', title='no title', charset='utf-8')
    link(rel='stylesheet', href='/static/css/main.css', media='screen', title='no title', charset='utf-8')
  body
    div.container-fluid
      .container
        header
          h1 Welcome to GridAI
          p Control the player with WASD and get to the bottom of the maze
        div#maze_form.justify-content-between
          form.form-inline
            label.sr-only(for='width') Width
            .input-group.mb-2.mr-sm-2.mb-sm-0
              .input-group-addon Width&nbsp;
              input.form-control(type='text', name='width')
            label.sr-only(for='height') Height
            .input-group.mb-2.mr-sm-2.mb-sm-0
              .input-group-addon Height
              input.form-control(type='text', name='height')
            button.btn.btn-success(type='submit') Generate
          span
            label.theme-label Theme:
            label.switch
              input(name='theme', type='checkbox')
              span.slider.round
      .maze
        // canvas#canvas(width='500', height='300')
    script(src='/static/js/jquery.min.js')
    script(src='/static/js/bootstrap.min.js')
    script(src='/static/js/main.js', charset='utf-8')
